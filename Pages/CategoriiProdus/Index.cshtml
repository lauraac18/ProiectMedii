@page
@model GestiuneRestaurant.Pages.CategoriiProdus.IndexModel

@{
    ViewData["Title"] = "Categorii Preparate";
}

<h1 class="text-primary display-4">Categorii Preparate</h1>

<div class="alert alert-info mt-3 shadow-sm">
    <strong>Notă:</strong> Definirea corectă a categoriilor ajută la organizarea vizuală a meniului pentru clienți.
</div>

<p class="mt-4">
    <a asp-page="Create" class="btn btn-success btn-lg shadow">Adaugă Categorie Nouă</a>
</p>

<div class="card shadow-sm mt-4">
    <table class="table table-hover mb-0">
        <thead class="table-dark">
            <tr>
                <th>Denumire Categorie</th>
                <th class="text-center">Acțiuni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CategorieProdus)
            {
                <tr>
                    <td class="align-middle fw-bold" style="font-size: 1.1rem;">
                        <i class="bi bi-tag-fill me-2 text-primary"></i>@item.NumeCategorie
                    </td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-warning">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-info">Detalii</a>
                            <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-sm btn-outline-danger">Șterge</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>