@page
@model GestiuneRestaurant.Pages.Clienti.IndexModel

@{
    ViewData["Title"] = "Gestionare Clienți";
}

<h1 class="text-primary display-4">Gestionare Clienți</h1>

<div class="alert alert-info mt-3 shadow-sm">
    <strong>Notă:</strong> Asigurați-vă că datele de contact ale clienților sunt actualizate pentru rezervări.
</div>

<p class="mt-4">
    <a asp-page="Create" class="btn btn-success btn-lg shadow">Adaugă Client Nou</a>
</p>

<div class="card shadow-sm mt-4">
    <table class="table table-hover mb-0">
        <thead class="table-dark">
            <tr>
                <th>Nume Client</th>
                <th>Prenume</th>
                <th>Email</th>
                <th>Telefon</th>
                <th class="text-center">Acțiuni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Client)
            {
                <tr>
                    <td class="align-middle fw-bold">@item.Nume</td>
                    <td class="align-middle">@item.Prenume</td>
                    <td class="align-middle">@item.Email</td>
                    <td class="align-middle">@item.Telefon</td>
                    <td class="text-center">
                        <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-warning">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-info">Detalii</a>
                        <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-sm btn-outline-danger">Șterge</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>