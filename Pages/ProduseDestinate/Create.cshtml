@page

@model GestiuneRestaurant.Pages.ProduseDestinate.CreateModel



@{

    ViewData["Title"] = "Adauga Categorie Produs";

}



<h1>Asociere Produs - Categorie</h1>

<hr />

<div class="row">

    <div class="col-md-4">

        <form method="post">

            <div asp-validation-summary="All" class="text-danger"></div>



            <div class="form-group mb-3">

                <label asp-for="ProdusDestinat.ProdusMeniuID" class="control-label">Selecteaza Preparatul</label>

                <select asp-for="ProdusDestinat.ProdusMeniuID" class="form-control" asp-items="ViewBag.ProdusMeniuID"></select>

            </div>

            <div class="form-group mb-3">

                <label asp-for="ProdusDestinat.CategorieProdusID" class="control-label">Selecteaza Categoria</label>

                <select asp-for="ProdusDestinat.CategorieProdusID" class="form-control" asp-items="ViewBag.CategorieProdusID"></select>

            </div>

            <div class="form-group">

                <input type="submit" value="Salvează Asocierea" class="btn btn-primary" />

            </div>

        </form>

    </div>

</div>



<div class="mt-3">

    <a asp-page="Index">Înapoi la listă</a>

</div>



@section Scripts {

    @{

        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }

}