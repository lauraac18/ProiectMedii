@page
@model GestiuneRestaurant.Pages.ProduseDestinate.IndexModel

@{
    ViewData["Title"] = "Log Legături Produse";
}

<h1 class="text-primary display-4">Log Legături Categorii</h1>

<div class="alert alert-warning mt-3 shadow-sm">
    <strong>Administrare:</strong> Această pagină afișează mapările brute între preparate și categoriile lor de destinație.
</div>

<div class="card shadow-sm mt-4 border-warning">
    <table class="table table-striped mb-0">
        <thead class="table-dark">
            <tr>
                <th>ID Legătură</th>
                <th>Produs (Meniu)</th>
                <th>Categorie Alocată</th>
                <th class="text-center">Gestionare</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProdusDestinat)
            {
                <tr>
                    <td class="text-muted">#@item.ID</td>
                    <td class="fw-bold text-secondary">@item.ProdusMeniu.NumePreparat</td>
                    <td>
                        <span class="badge bg-light text-primary border border-primary">
                            @item.CategorieProdus.NumeCategorie
                        </span>
                    </td>
                    <td class="text-center">
                        <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">Elimină Legătura</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>