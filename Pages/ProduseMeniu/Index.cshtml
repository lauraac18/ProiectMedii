@page
@model GestiuneRestaurant.Pages.ProduseMeniu.IndexModel

@{
    ViewData["Title"] = "Meniu Restaurant";
}

<h1 class="text-primary display-4">Meniu Restaurant</h1>

<div class="alert alert-info mt-3 shadow-sm">
    <strong>Notă:</strong> Modificările de preț vor apărea instantaneu în sistemul de comandă.
</div>

<div class="d-flex justify-content-between align-items-center mt-4">
    <form asp-page="./Index" method="get" class="d-flex shadow-sm">
        <div class="input-group">
            <input type="text" name="searchString" value="@Model.CurrentSort" class="form-control" placeholder="Caută preparat..." />
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i> Caută
            </button>
            <a asp-page="./Index" class="btn btn-outline-secondary">Reset</a>
        </div>
    </form>

    <a asp-page="Create" class="btn btn-success btn-lg shadow">Adaugă Preparat Nou</a>
</div>

<div class="card shadow-sm mt-4">
    <table class="table table-hover mb-0">
        <thead class="table-dark">
            <tr>
                <th>
                    <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort" class="text-white text-decoration-none">
                        Denumire Preparat
                        <span class="small">@(Model.CurrentSort == "name_desc" ? "▼" : "▲")</span>
                    </a>
                </th>
                <th>
                    <a asp-page="./Index" asp-route-sortOrder="@Model.PriceSort" class="text-white text-decoration-none">
                        Preț
                        <span class="small">@(Model.CurrentSort == "Pret" ? "▲" : Model.CurrentSort == "price_desc" ? "▼" : "")</span>
                    </a>
                </th>
                <th>Categorii Alocate</th>
                <th class="text-center">Acțiuni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProdusMeniu)
            {
                <tr>
                    <td class="align-middle fw-bold">@item.NumePreparat</td>
                    <td class="align-middle text-success fw-bold">@item.Pret.ToString("F2") RON</td>
                    <td class="align-middle">
                        @{
                            foreach (var junction in item.ProduseDestinate)
                            {
                                <span class="badge rounded-pill bg-info text-dark me-1 shadow-sm">
                                    @junction.CategorieProdus.NumeCategorie
                                </span>
                            }
                        }
                    </td>
                    <td class="text-center">
                        <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-warning shadow-sm">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-info shadow-sm">Detalii</a>
                        <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-sm btn-outline-danger shadow-sm">Șterge</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table-dark th a:hover {
        color: #ffc107 !important;
        transition: 0.3s;
    }
</style>