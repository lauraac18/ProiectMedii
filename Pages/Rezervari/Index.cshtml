@page
@model GestiuneRestaurant.Pages.Rezervari.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Rezervari</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rezervare[0].DataOra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rezervare[0].Masa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rezervare[0].Client)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Rezervare)
{
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DataOra)
                </td>
                <td>
                    @* Afișăm numărul mesei din tabelul legat *@
                    Masa @Html.DisplayFor(modelItem => item.Masa.NumarMasa)
                </td>
                <td>
                    @* Afișăm numele complet al clientului din tabelul legat *@
                    @Html.DisplayFor(modelItem => item.Client.NumeComplet)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
}
